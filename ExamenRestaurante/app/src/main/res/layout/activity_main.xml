<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El comedor del Muerto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <Button
        android:id="@+id/btn_AgregarPlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Plato"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="171dp" />

    <Button
        android:id="@+id/btn_modificarPlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar Plato"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="171dp" />

    <Button
        android:id="@+id/btn_listarPlatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar Platos"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="329dp" />

    <Button
        android:id="@+id/btn_elminarPlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Plato"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="329dp" />

</androidx.constraintlayout.widget.ConstraintLayout>